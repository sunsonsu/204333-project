generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String

  registerdAt DateTime  @default(now())
  lastLogin   DateTime?

  favorite Favorite[]
  chats    Chat[]
}

model Favorite {
  uid Int
  c   String

  user User         @relation(fields: [uid], references: [id])
  coin ExchangeRate @relation(fields: [c], references: [coin])

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@id([uid, c])
}

model ExchangeRate {
  coin String @id
  rate Float

  updatedAt DateTime @updatedAt

  favorite Favorite[]
  Chats    Chat[]
}

model Chat {
  cid Int    @id @default(autoincrement())
  uid Int
  c   String

  msg String

  coin ExchangeRate @relation(fields: [c], references: [coin])
  user User         @relation(fields: [uid], references: [id])

  createdAt DateTime  @default(now())
  deletedAt DateTime?
}
